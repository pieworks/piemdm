{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.js",
        "**/*.spec.js"
    ]
}