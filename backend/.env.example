# PieMDM Environment Configuration

# Application Settings
APP_ENV=development
APP_NAME=piemdm
APP_PORT=8787
APP_DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=piemdm
DB_CHARSET=utf8mb4
DB_TABLE_PREFIX=tbl_

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE_HOURS=24

# API Security
API_SIGN_APP_KEY=your_api_key
API_SIGN_APP_SECRET=your_api_secret

# File Upload
UPLOAD_MAX_SIZE=10MB
EXPORT_SAVE_PATH=export/

# Log Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./storage/logs/server.log
LOG_MAX_SIZE=1024
LOG_MAX_AGE=7
LOG_MAX_BACKUPS=30
LOG_COMPRESS=true

# CORS Settings
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Webhook Configuration
WEBHOOK_TIMEOUT=30s
WEBHOOK_RETRY_COUNT=3

# Cron Jobs
CRON_ENABLED=true

# Development Settings (only for development)
DEV_MOCK_DATA=false
DEV_AUTO_MIGRATE=true